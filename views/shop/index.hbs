<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
            {{ successMsg }}
        </div>
    </div>
</div>

{{# each products }}
<div class="row">
    {{# each this }}

        <section class="col-sm-6 col-md-3">
            <div class="shop-items">
                <div class="shop-item">
                    <span class="shop-item-title">{{ this.title }}</span>
                    <img class="shop-item-image" src="{{ this.imagePath }}">
                    <br><br>
                    <p class="description">{{ this.description }}</p>
                    <div class="shop-item-details" >
                        <span class="shop-item-price">â‚¬{{ this.price }}</span>
                        
                        
                        
                    </div>
                    <div class="shop-item-details">
                    <a href="/add-to-cart/{{this._id}}" class="btn btn-primary shop-item-button" role="button">Add to Cart</a>
                    </div>
                </div>
            </div>
        </section>
    {{/each}}
</div>
{{/each}}

<style>
    p {
        text-align: justify;
        text-justify: inter-word;
        color: #CDC1C1;
}

.shop-item {
    margin: 30px;
}

.shop-item-title {
    display: block;
    width: 100%;
    text-align: center;
    font-weight: bold;
    font-size: 1.5em;
    color: white;
    margin-bottom: 15px;
}

.shop-item-image {
    height: 250px;
    border:2px solid whitesmoke;
    outline-color: #5044E0;  
    outline-style:outset;
    padding: 10px;
    display: block;
    margin-left: auto;
    margin-right: auto;
    
}

.shop-item-details {
    display: block;
    width: 100%;
    text-align: center;
    font-weight: bold;
    font-size: 1.5em;
    color: white;
    margin-bottom: 15px;
}

.shop-item-price {
    flex-grow: 1;
    color: white;
}

