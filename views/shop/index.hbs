<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
            {{ successMsg }}
        </div>
    </div>
</div>

{{# each products }}
<div class="row">
    {{# each this }}
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail" style="background-color: #CCD1D3">
            <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
            <div class="caption">
                <strong><h3 style="text-align: center;">{{ this.title }}</strong></h3>
                <p class="description">{{ this.description }}</p>
                <div class="clearfix">
                    <div class="price pull-left">â‚¬{{ this.price }}</div>
                    <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Add to the Cart</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{/each}}

<style>
    p {
        text-align: justify;
        text-justify: inter-word;
        color: #CDC1C1;
}
</style>