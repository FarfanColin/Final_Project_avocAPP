{{# if this.products }}

<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <ul class="list-group">
        
            
                {{#each products}}
            

            <li class="list-group-item"><span class="badge" style="font-size: large">{{this.qty}}</span>
            <span style="font-weight: bold; font-size: x-large;">{{this.item.title}}</span>
            <span class="label label-success" style="font-size: large;">€{{this.price}}</span>
            </li>
            <li class="list-group-item">
                <a href="/remove/{{this.item._id}}" class="btn btn-info" role="button"><strong style="color: black;">REMOVE ALL</strong></a>
                <a href="/reduce/{{this.item._id}}" class="btn btn-info" role="button"><strong style="color: white;"><i class="fa fa-minus" aria-hidden="true" style="color: black"></i></strong></a>
                <a href="/increase/{{this.item._id}}" class="btn btn-info" role="button"><strong style="color: white;"><i class="fa fa-plus" aria-hidden="true" style="color: black;"></i></strong></a>
            </li>
            
            {{/each}}
        </ul>
        </div>
    </div>

    

<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <h2 class="section-header">Total: € {{totalPrice}}</h2>
    </div>
</div>
<hr style="width:100%;margin-left:0;height:2px;border-width:0;color:yellow;background-color: yellow">
<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <a href="/checkout" type="button" class="btn btn-primary btn-purchase">Checkout</a>
    </div>
</div>
{{ else }}
<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <h2 style="color: white; text-align: center; ">No Items in Cart!</h2>
        <hr style="width:100%;margin-left:0;height:2px;border-width:0;color:yellow;background-color: yellow">
    </div>
</div>
{{/if}}

