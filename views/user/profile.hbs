<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1>User Profile</h1>
        <hr>
        <h2>My Orders</h2>
        {{# each orders }}
            <div class="panel panel-default">
                <div class="panel-body">
                    <ul class="list-group">
                        {{# each this.items }}
                            <li class="list-group-item">
                                <span class="badge">$ {{ this.price }}</span>
                                Item: {{ this.item.title }} || Pieces: {{ this.qty }}
                            </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="panel-footer">
                    <ul class="list-group">
                        <li class="list-group-item">
                            <strong>Total Price: ${{ this.cart.totalPrice }}</strong>
                        </li>   
                        <li class="list-group-item">
                            <strong>Date to be picked: {{ this.time }}</strong>
                        </li>   
                    </ul>
                </div>
            </div>
        {{/each}}
    </div>
</div>